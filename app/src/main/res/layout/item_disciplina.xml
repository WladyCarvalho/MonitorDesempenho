<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"

        android:backgroundTint="@color/card"
        android:padding="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/rl_decorator"
                android:layout_alignParentLeft="true"
                android:background="@drawable/green_gradient"
                android:layout_width="2dp"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true"
                android:id="@+id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_decorator"
                app:srcCompat="@drawable/grupo_776"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            <LinearLayout
                android:id="@+id/gp_txt"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_disciplina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QuÃ­mica"
                    android:textColor="@color/text_light"
                    android:textSize="16sp"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_nome_professor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miguel Garay"
                    android:textColor="@color/light_primary"
                    android:textSize="12sp"/>
            </LinearLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</LinearLayout>