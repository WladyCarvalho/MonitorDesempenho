<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.add_disciplina.Inserir_disciplina">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:scaleType="centerCrop"
            android:src="@drawable/grupo_959"/>
        <LinearLayout
            android:id="@+id/gp_header"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/verde"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inserir Disciplina"
                android:fontFamily="@font/segoe_ui_400"
                android:textColor="@color/text_light"
                android:textSize="26sp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_disciplina"
            android:layout_marginTop="30dp"
            android:layout_below="@id/gp_header"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_simple_mathworks"/>
        <RelativeLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img_disciplina">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/background"
                        app:boxStrokeColor="#5E6DFF"
                        android:textColorHint="#5A5A5A"
                        app:boxCornerRadiusBottomEnd="5dp"
                        android:hint="Disciplina">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_nome_disciplina"
                            android:layout_width="match_parent"
                            android:textColor="@color/text_light"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lt_drop_professor"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundColor="@color/background"
                        app:boxStrokeColor="#5E6DFF"
                        android:hint="Professor"

                        android:textColorHint="#5A5A5A">
                        <AutoCompleteTextView
                            android:id="@+id/drop_professor"
                            android:inputType="none"
                            android:textColor="@color/text_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundColor="@color/background"
                        app:boxStrokeColor="#5E6DFF"
                        android:hint="Semestre"
                        android:textColorHint="#5A5A5A">
                        <AutoCompleteTextView
                            android:id="@+id/drop_semestre"
                            android:inputType="none"
                            android:textColor="@color/text_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_professor"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="70dp"
                        app:icon="@drawable/ic_icon_awesome_chalkboard_teacher"
                        android:text="Adicionar professor"
                        app:backgroundTint="@color/base"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_salvar_disciplina"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        app:icon="@drawable/ic_icon_awesome_save"
                        android:layout_height="70dp"
                        android:text="Salvar"
                        app:backgroundTint="@color/primary"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>